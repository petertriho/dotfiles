# focus
alt + ctrl - x : yabai -m window --focus recent
alt + ctrl - h : yabai -m window --focus west
alt + ctrl - j : yabai -m window --focus south
alt + ctrl - k : yabai -m window --focus north
alt + ctrl - l : yabai -m window --focus east

alt + ctrl - z : yabai -m window --focus stack.prev
alt + ctrl - c : yabai -m window --focus stack.next

alt + ctrl - p : yabai -m space --focus prev
alt + ctrl - n : yabai -m space --focus next

# move
alt + shift - h : yabai -m window --warp west
alt + shift - j : yabai -m window --warp south
alt + shift - k : yabai -m window --warp north
alt + shift - l : yabai -m window --warp east

alt + shift - p : yabai -m space --move prev
alt + shift - n : yabai -m space --move next

# resize
alt + ctrl + shift - 0x18 : yabai -m space --balance
alt + ctrl + shift - h : yabai -m window west --resize right:-100:0 2> /dev/null || yabai -m window --resize right:-100:0
alt + ctrl + shift - j : yabai -m window north --resize bottom:0:100 2> /dev/null || yabai -m window --resize bottom:0:100
alt + ctrl + shift - k : yabai -m window south --resize top:0:-100 2> /dev/null || yabai -m window --resize top:0:-100
alt + ctrl + shift - l : yabai -m window east --resize left:100:0 2> /dev/null || yabai -m window --resize left:100:0
alt + ctrl + shift - f : yabai -m window --toggle zoom-fullscreen
alt + ctrl + shift - d : yabai -m window --toggle float && yabai -m window --grid 4:4:1:1:2:2

# float
alt + ctrl + shift - up    : yabai -m window --grid 1:1:0:0:1:1
alt + ctrl + shift - left  : yabai -m window --grid 1:2:0:0:1:1
alt + ctrl + shift - right : yabai -m window --grid 1:2:1:0:1:1

# create/destroy
alt + ctrl - i : yabai -m window --insert stack
alt + ctrl - t : yabai -m space --create
alt + ctrl - w : yabai -m space --destroy

alt + shift - t : yabai -m space --create && \
                  index="$(yabai -m query --spaces --display | jq 'map(select(."native-fullscreen" == 0))[-1].index')" && \
                  yabai -m window --space "${index}" && \
                  yabai -m space --focus "${index}"
alt + ctrl + shift - t : yabai -m space --create && \
                index="$(yabai -m query --spaces --display | jq 'map(select(."native-fullscreen" == 0))[-1].index')" && \
                yabai -m space --focus "${index}"

# terminal
alt + ctrl - return : /Applications/Kitty.app/Contents/MacOS/kitty --single-instance -d ~ &> /dev/null
