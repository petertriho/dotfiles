{
    "diagnostic.errorSign": "x",
    "diagnostic.hintSign": "h",
    "diagnostic.infoSign": "i",
    "diagnostic.warningSign": "!",

    "diagnostic.checkCurrentLine": true,
    "diagnostic.messageTarget": "echo",
    "diagnostic.virtualText": true,
    "diagnostic.virtualTextCurrentLineOnly": false,
    "diagnostic.virtualTextPrefix": " \uf445 ",

    "suggest.removeDuplicateItems": true,
    "suggest.completionItemKindLabels": {
        "class": " \uf816 (class)",
        "color": " \uf8d7 (color)",
        "constant": " \uf6fc (constant)",
        "constructor": " \ue20f (constructor)",
        "default": " \ue612 (default)",
        "enum": " \ufa57 (enum)",
        "enumMember": " \uf15d (enum-member)",
        "event": " \uf0e7 (event)",
        "field": " \ue716 (field)",
        "file": " \uf723 (file)",
        "folder": " \uf115 (folder)",
        "function": " \uf6a6 (function)",
        "interface": " \ue729 (interface)",
        "keyword": " \uf767 (keyword)",
        "method": " \uf6a6 (method)",
        "module": " \uf668 (module)",
        "operator": " \uf694 (operator)",
        "property": " \uf0ad (property)",
        "reference": " \uf481 (reference)",
        "snippet": " \uf64c (snippet)",
        "struct": " \uf1b3 (struct)",
        "text": " \uf52b (text)",
        "typeParameter": "<\uf783>(type-parameter)",
        "unit": " \ue21f (unit)",
        "value": " \uf89f (value)",
        "variable": "[\ue716](variable)"
    },

    // coc-diagnostic
    "diagnostic-languageserver.filetypes": {
        "sh": "shellcheck",
        "dockerfile": "hadolint"
    },

    // coc-emoji
    "coc.source.emoji.filetypes": ["markdown"],

    // coc-explorer
    "explorer.autoExpandOptions": ["recursive", "recursiveSingle"],
    "explorer.file.root.template": "[icon] [git & 1] [hidden & 1][root]",
    "explorer.file.showHiddenFiles": true,
    "explorer.git.icon.status.ignored": "I",
    "explorer.git.icon.status.mixed": "\u25cf",
    "explorer.icon.enableNerdfont": true,
    "explorer.keyMappings.global": {
        "o": ["expandable?", "expand", "open"],
        "<cr>": ["expandable?", "expand", "open"],
        "v": "open:vsplit"
    },
    "explorer.width": 30,

    // coc-git
    "git.addedSign.hlGroup": "GitGutterAdd",
    "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
    "git.changedSign.hlGroup": "GitGutterChange",
    "git.removedSign.hlGroup": "GitGutterDelete",
    "git.topRemovedSign.hlGroup": "GitGutterDelete",

    "git.addedSign.text": "\u2503",
    "git.changeRemovedSign.text": "\u2503",
    "git.changedSign.text": "\u2503",
    "git.removedSign.text": "\u2503",
    "git.topRemovedSign.text": "\u2503",


    // coc-markdownlint
    "markdownlint.config": {
        "MD013": false,
        "MD024": false,
        "MD030": false
    },

    // coc-prettier
    "prettier.tabWidth": 4,

    // coc-pyright
    "python.formatting.provider": "black",

    // coc-sh
    "sh.highlightParsingErrors": false,

    // coc-tabnine
    "tabnine.priority": 60,

    // coc-tailwindcss
    "tailwindCSS.emmetCompletions": true,
    "tailwindCSS.headwind.classRegex": {
        "javascript": "(?:\\bclassName\\s*=\\s*{*\\w*\\(*[_a-zA-Z0-9,{}\\(\\)\\[\\]\\s]*[\\\"\\'\\`]([_a-zA-Z0-9\\s\\-\\:\\/]+)[\\\"\\'\\`][_a-zA-Z0-9,{}\\(\\)\\[\\]\\s]*\\)*}*)|(?:\\btw\\s*`([_a-zA-Z0-9\\s\\-\\:\\/]*)`)",
        "javascriptreact": "(?:\\bclassName\\s*=\\s*{*\\w*\\(*[_a-zA-Z0-9,{}\\(\\)\\[\\]\\s]*[\\\"\\'\\`]([_a-zA-Z0-9\\s\\-\\:\\/]+)[\\\"\\'\\`][_a-zA-Z0-9,{}\\(\\)\\[\\]\\s]*\\)*}*)|(?:\\btw\\s*`([_a-zA-Z0-9\\s\\-\\:\\/]*)`)",
        "typescript": "(?:\\bclassName\\s*=\\s*{*\\w*\\(*[_a-zA-Z0-9,{}\\(\\)\\[\\]\\s]*[\\\"\\'\\`]([_a-zA-Z0-9\\s\\-\\:\\/]+)[\\\"\\'\\`][_a-zA-Z0-9,{}\\(\\)\\[\\]\\s]*\\)*}*)|(?:\\btw\\s*`([_a-zA-Z0-9\\s\\-\\:\\/]*)`)",
        "typescriptreact": "(?:\\bclassName\\s*=\\s*{*\\w*\\(*[_a-zA-Z0-9,{}\\(\\)\\[\\]\\s]*[\\\"\\'\\`]([_a-zA-Z0-9\\s\\-\\:\\/]+)[\\\"\\'\\`][_a-zA-Z0-9,{}\\(\\)\\[\\]\\s]*\\)*}*)|(?:\\btw\\s*`([_a-zA-Z0-9\\s\\-\\:\\/]*)`)"
    },

    // coc-yank
    "yank.highlight.duration": 300,
    "yank.priority": 50
}
