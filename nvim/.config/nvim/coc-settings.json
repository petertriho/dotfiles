{
    "diagnostic.errorSign": "✘",
    "diagnostic.warningSign": "",
    "diagnostic.infoSign": "",

    // coc-diagnostic
    "diagnostic-languageserver.filetypes": {
        "sh": "shellcheck",
        "dockerfile": "hadolint"
    },

    // coc-emoji
    "coc.source.emoji.filetypes": ["markdown"],

    // coc-explorer
    "explorer.autoExpandOptions": [
        "recursive",
        "recursiveSingle"
    ],
    "explorer.file.root.template": "[icon] [git & 1] [hidden & 1][root] [fullpath]",
    "explorer.file.showHiddenFiles": true,
    "explorer.icon.enableNerdfont": true,
    "explorer.keyMappings.global": {
        "o": ["expandable?", "expand", "open"],
        "<cr>": ["expandable?", "expand", "open"],
        "v": "open:vsplit"
    },
    "explorer.width": 30,

    // coc-git
    "git.enableGutters": false,
    "git.realtimeGutters": false,

    // coc-prettier
    "prettier.tabWidth": 4,

    // coc-sh
    "sh.highlightParsingErrors": false
}
