root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.sh]
shell_variant = bash
binary_next_line = true
switch_case_indent = true
space_redirects = true
keep_padding = true

[{*.yaml,*.yml,*.md,*.tf,*.tfvars}]
indent_size = 2
