#!/usr/bin/env bash

function main {
	brew install \
		hadolint \
		jq \
		shellcheck \
		shfmt

	brew install cmake luarocks
	luarocks install --server=https://luarocks.org/dev luaformatter

	yarn global add \
		@fsouza/prettierd \
		eslint_d \
        fixjson \
        markdownlint-cli2 \
		rustywind

    asdf reshim nodejs
}

main
